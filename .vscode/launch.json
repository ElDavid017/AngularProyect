{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch dev (backend+frontend)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: dev:all"
    },
    {
      "name": "Frontend only (ng serve)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/",
      "preLaunchTask": "npm: start"
    }
  ]
}

