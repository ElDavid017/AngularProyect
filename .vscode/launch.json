{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Frontend (Angular + Proxy)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: start",
      "serverReadyAction": {
        "pattern": "Local:.*http://localhost:4200",
        "uriFormat": "http://localhost:4200",
        "action": "openExternally"
      }
    }
  ]
}

